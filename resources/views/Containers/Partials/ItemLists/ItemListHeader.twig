{% set isNameEmpty = trans("Zisternenfilter::Template.itemList" ~ itemListNo ~ "ListName") == 'Name' or
                     trans("Zisternenfilter::Template.itemList" ~ itemListNo ~ "ListName") is empty %}

{% if listType == "last_seen" %}
    {% if isNameEmpty %}
        {% set header = trans("Zisternenfilter::Template.itemListLastSeen") %}
    {% else %}
        {% set header = trans("Zisternenfilter::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "cross_selling" %}
    {% if isNameEmpty %}
        {% set header = trans("Zisternenfilter::Template.itemListX" ~ config("Ceres.item.lists.cross_selling_type")) %}
    {% else %}
        {% set header = trans("Zisternenfilter::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% elseif listType == "tag_list" %}
    {% if isNameEmpty %}
        {% set header = "Tags" %}
    {% else %}
        {% set header = trans("Zisternenfilter::Template.itemList" ~ itemListNo ~ "ListName") %}
    {% endif %}
{% endif %}
